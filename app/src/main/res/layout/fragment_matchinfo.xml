<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    tools:context=".matchinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imgteam1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:layout_weight="2.5"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/nameteam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5"
                android:gravity="left"
                android:text="Dummy Text"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="VS"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/nameteam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5"
                android:gravity="right"
                android:text="Dummy Text"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imgteam2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_weight="2.5"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp30">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:weightSum="10">

            <TableRow

                android:background="@drawable/tabledesign"
                android:paddingEnd="@dimen/dp8"
                android:paddingVertical="@dimen/dp8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/gname"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/series_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/tabledesign2"
                    android:padding="@dimen/dp10"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />
            </TableRow>

            <TableRow

                android:background="@drawable/tabledesign"
                android:paddingEnd="@dimen/dp8"
                android:paddingVertical="@dimen/dp8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/matchdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/tabledesign2"
                    android:padding="@dimen/dp10"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />
            </TableRow>

            <TableRow

                android:background="@drawable/tabledesign"
                android:paddingEnd="@dimen/dp8"
                android:paddingVertical="@dimen/dp8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/matchtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/tabledesign2"
                    android:padding="@dimen/dp10"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />
            </TableRow>

            <TableRow

                android:background="@drawable/tabledesign"
                android:paddingEnd="@dimen/dp8"
                android:paddingVertical="@dimen/dp8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/venue"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/matchvenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/tabledesign2"
                    android:padding="@dimen/dp10"
                    android:text="@string/venue"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />
            </TableRow>

            <TableRow

                android:background="@drawable/tabledesign"
                android:paddingEnd="@dimen/dp8"
                android:paddingVertical="@dimen/dp8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/contact_no"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/tabledesign2"
                    android:padding="@dimen/dp10"
                    android:text="@string/contact"
                    android:textAlignment="center"
                    android:textColor="@color/DarkBlue"
                    android:textSize="@dimen/dp18" />
            </TableRow>

        </TableLayout>

    </LinearLayout>


    <Button
        android:id="@+id/jointeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/btnstyle"
        android:text="@string/join_this_match"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/teamchoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <Button
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:layout_marginTop="@dimen/dp40"
            android:layout_weight="1"
            android:background="@drawable/btnstyle"
            android:text="@string/team_1"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:layout_marginTop="@dimen/dp40"
            android:layout_weight="1"
            android:background="@drawable/btnstyle"
            android:text="@string/team_2"
            android:textColor="@color/White"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>